<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Text:</strong>
  <%= @product.text %>
</p>

<p>
  <strong>Image:</strong>
  <%#= @product.image_id %>
  <% if @product.image_id.present? %>
    <%= image_tag attachment_url(@product, :image, :fill, 100, 100) %>
  <% end %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
